<div class="row edit">
<%= form_for @post do |f| %>
  <div class="large-10 large-centered columns">
    <%= f.label :title%><br>
    <%= f.text_field :title, :required => true %>
  </div>
  <div class="large-10 large-centered columns">
    <%= f.label :body %><br>
    <%= f.text_area :body, :required => true %>
  </div>
  <div class="large-10 large-centered columns">
    <%= f.submit class: "button" %>
    <%= link_to 'Back', posts_path, class: "secondary button"%>
  </div>
<% end %>
</div>