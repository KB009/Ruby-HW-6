<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>All Posts</h1>

  <%= link_to 'New Post', new_post_path, class: "button"%>
  <table class="posts-table">
    <thead>
    <tr>
      <th class="title">Title</th>
      <th>Body</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <% @posts.each do |post| %>
        <tr class="bottom-border" id="post-row-<%= post.id %>">
          <td class="post-title"><%= post.title %></td>
          <td class="post-body"><%= post.body %></td>

          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "delete" %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>