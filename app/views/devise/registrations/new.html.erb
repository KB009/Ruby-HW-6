<%= render 'menu' %>

<br/>
<div class="row">
  <div class="medium-6 medium-centered large-4 large-centered columns">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|%>
        <div class="row column log-in-form">
          <h4 class="text-center">Sign up</h4>

          <div class="name-field">
            <label for="user_name">Your name <small>required</small>
                <%= f.text_field :name, autofocus: true, placeholder: "fill in your name", required: true%>
            </label>
          </div>

          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, placeholder: "somebody@example.com" %>

          <label>Password <small>required</small>
          <% if @minimum_password_length %>
            <%= f.password_field :password, autocomplete: "off", placeholder: "8 characters minimum" %>
            <% else %>
                <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
            <% end %>
          </label>

          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "your password again"%>

          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
          <p><%= f.submit "Sign in", class: "button expand" %></p>
          <%= render "devise/shared/links" %>
        </div>
    <% end %>
  </div>
</div>
